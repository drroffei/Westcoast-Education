}

<h1>@ViewData["Title"]</h1>

<section>
  <h4>Ange dina uppgifter:</h4>
  <form method="post">
    <div>
      <label asp-for="CustomerViewModel.FirstName"></label>
      <input asp-for="CustomerViewModel.FirstName" />
    </div>
    <div>
      <label asp-for="CustomerViewModel.LastName"></label>
      <input asp-for="CustomerViewModel.LastName" />
    </div>
    <div>
